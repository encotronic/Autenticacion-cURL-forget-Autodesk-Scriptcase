////------      ejemplo 2 con multiexplode (",","{","}",":",'"')
	function multiexplode ($delimiters,$json) {
	$MakeReady = str_replace($delimiters, $delimiters[0], $json);
	$Return    = explode($delimiters[0], $MakeReady);
	return  $Return;
}
$json = $response;

$Exploded = multiexplode(array(",","{","}",":",'"'),$json);
}


